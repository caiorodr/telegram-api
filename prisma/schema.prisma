generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cadastro {
  id          Int      @id @default(autoincrement())
  id_telegram String   @unique @db.VarChar(20)
  tp_user     String   @db.VarChar(1)
  cod_erp     String?  @db.VarChar(6)
  descricao   String   @db.VarChar(30)
  acessos     Acesso[]

  @@map("CADASTRO")
}

model Acesso {
  id            Int       @id @default(autoincrement())
  rotina        String    @db.VarChar(30)
  descricao     String    @db.VarChar(30)
  menu          String    @db.VarChar(1)
  acesso        Cadastro? @relation(fields: [id_telegram], references: [id_telegram])
  id_telegram   String
}
